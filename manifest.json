{
  "manifest_version": 3,
  "name": "Moodle Attendance Predictor",
  "version": "1.0",
  "description": "Calculates classes needed to reach 65% and 75% attendance.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://lms-cujammu.samarth.ac.in/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
